{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": ["esnext", "dom"],
    "allowJs": false,
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./",
    "rootDir": "./src",
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "types": ["youtube", "node"],
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules"],
  "include": ["./src"]
}
